{% extends 'innerbase.html.twig' %}

{% block body %}
    <h1>Internship Classes</h1>
    <div class="section no-pad-bot" id="index-banner">
        <div class="container">
            <div class="card-panel">
                <table>
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Courseprefixnumber</th>
                            <th>Professor</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for classList in classLists %}
                        <tr>
                            <td><a href="{{ path('classlist_show', { 'id': classList.id }) }}">{{ classList.id }}</a></td>
                            <td>{{ classList.coursePrefixNumber }}</td>
                            <td>{{ classList.professor }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('classlist_show', { 'id': classList.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('classlist_edit', { 'id': classList.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div> 
    <ul>
        <li>
            <a href="{{ path('classlist_new') }}">Create a new classList</a>
        </li>
    </ul>
{% endblock %}

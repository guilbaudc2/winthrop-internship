{% extends 'innerbase.html.twig' %}

{% block title %}Internship Class Information{% endblock %}

{% block body %}
    <h1 class="header center">Internship Class Information</h1>
    
    <div class="section" id="nav-backBtn">
        <ul>
            <li>
                <a href="{{ path('classlist_index') }}" class="btn waves-effect waves-light button-back">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('classlist_new') }}" class="btn waves-effect waves-light button-back">Add New Internship Class</a>
            </li>
            <li>
                <a href="{{ path('classlist_edit', { 'id': classList.id }) }}" class="btn waves-effect waves-light button-back">Edit</a>
            </li>
        </ul>
    </div>
    
    <div class="section no-pad-bot" id="index-banner">
        <div class="container">
            <div class="card-panel">
                <table>
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ classList.id }}</td>
                        </tr>
                        <tr>
                            <th>Courseprefixnumber</th>
                            <td>{{ classList.coursePrefixNumber }}</td>
                        </tr>
                        <tr>
                            <th>Professor</th>
                            <td>{{ classList.professor }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div> 
    <ul>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" class="del-btn" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

{% extends 'innerbase.html.twig' %}

{% block body %}
    <h1>Internship Class Information</h1>
    <div class="section no-pad-bot" id="index-banner">
        <div class="container">
            <div class="card-panel">
                <table>
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ classList.id }}</td>
                        </tr>
                        <tr>
                            <th>Courseprefixnumber</th>
                            <td>{{ classList.coursePrefixNumber }}</td>
                        </tr>
                        <tr>
                            <th>Professor</th>
                            <td>{{ classList.professor }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div> 
    <ul>
        <li>
            <a href="{{ path('classlist_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('classlist_edit', { 'id': classList.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

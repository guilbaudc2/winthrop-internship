{% extends 'innerbase.html.twig' %}

{% block title %}Edit Faculty Liaison Form{% endblock %}

{% block body %}
    <h1 class="header center">Edit Faculty Liaison Form</h1>
    <div class="section no-pad-bot" id="index-banner">
        <div class="container">
            <div class="card-panel">
            <p>Listed below are specific assignments that will be required of all students completing an internship in order to satisfactorily complete the experience and receive academic credit. Please indicate any other assignments that will be required during this work experience:</p>
                <br><br>
            {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <h4>I approve of the Learning Agreement & Personal Learning Goals. Learning agreement is valid and internship meets University criteria.</h4>
                <input onclick="M.toast({html: 'Changes Saved'})" type="submit" value="Save Changes" />
            {{ form_end(edit_form) }}
            </div>
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('facultyliaisonform_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

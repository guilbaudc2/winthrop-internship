{% extends 'innerbase.html.twig' %}

{% block body %}
    <h1>Faculty Liaison List</h1>
    <div class="section no-pad-bot" id="index-banner">
        <div class="container">
            <div class="card-panel">
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Username</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for facultyLiaisonList in facultyLiaisonLists %}
                        <tr>
                            <td>{{ facultyLiaisonList.name }}</td>
                            <td>{{ facultyLiaisonList.username }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('facultyliaisonlist_show', { 'id': facultyLiaisonList.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('facultyliaisonlist_edit', { 'id': facultyLiaisonList.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>   
    <ul>
        <li>
            <a href="{{ path('facultyliaisonlist_new') }}">Add New Faculty Liaison</a>
        </li>
    </ul>
{% endblock %}

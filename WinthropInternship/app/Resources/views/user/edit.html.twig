{% extends 'innerbase.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <h1 class="header center">{{ user.firstName }} {{ user.lastName }}'s User Information</h1>
    <div class="section" id="nav-backBtn">
        <ul>
            <li>
                <a href="{{ path('user_index') }}" class="btn waves-effect waves-light button-back">Back to the list</a>
            </li>
        </ul>
    </div>
    <div class="section no-pad-bot" id="index-banner">
        <div class="container">
            <div class="card-panel">
            {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <input type="submit" value="Save Changes" />
            {{ form_end(edit_form) }}
            </div>
        </div>
    </div>
{% endblock %}                
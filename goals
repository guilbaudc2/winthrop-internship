     <?php
     function Submitting()
     {
         check();
         $Submission = new mysqli("localhost", "username", "password", "dbname");
         $Submission->query("INSERT "); //insert into database
         $Submission->query("MODIFY "); //change form status to give to someone
         //header("Location: /dashboard.php");
     }
     function Saving()
     {
         check();
         $Save = new mysqli("localhost", "username", "password", "dbname");
         $Save->query("INSERT ");//need db info first
         //header("Location: /dashboard.php");
     }
